<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:paddingLeft="5dip"
              android:paddingRight="5dip"
              android:layout_gravity="center"
        >
    <ImageView
            android:layout_width="200dip"
            android:layout_height="145dip"
            android:id="@+id/imageView" android:layout_gravity="center" android:src="@drawable/icon_barcode"
            android:layout_marginTop="15dip"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Barcode : "
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:textStyle="bold"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="5dip"
            android:gravity="center"
            android:id="@+id/Barang_InputBrg"
            android:inputType="number" android:maxLength="15" android:singleLine="true"/>
    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Barang_PB" android:layout_gravity="center" android:indeterminate="false"/>
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content">
        <TextView
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:text="SKU"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/Barcode_SKU"
                android:layout_marginLeft="5dip"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content">
        <TextView
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:text="Nama Barang"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/Barcode_NamaSKU"
                android:layout_marginLeft="5dip"/>
    </LinearLayout>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate Barcode"
            android:id="@+id/Main_BtnSubmit" android:layout_gravity="center"
            android:layout_marginTop="10dip"/>
</LinearLayout>

